{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build",
        "watch": "npm-watch"
    },
    "watch": {
        "build": {
            "patterns": [
                "resources",
                "routes",
                "app",
                "database"
            ],
            "extensions": "js,jsx,ts,tsx,vue,css",
            "delay": 500,
            "runOnChangeOnly": true
        }
    },
    "devDependencies": {
        "@inertiajs/vue3": "^1.0.0",
        "@tailwindcss/forms": "^0.5.3",
        "@vitejs/plugin-vue": "^5.0.0",
        "autoprefixer": "^10.4.12",
        "axios": "^1.6.4",
        "laravel-vite-plugin": "^1.0",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.2.1",
        "typescript": "^5.0.2",
        "vite": "^5.0",
        "vue": "^3.4.0",
        "vue-tsc": "^1.8.27"
    },
    "dependencies": {
        "@tsparticles/vue3": "^3.0.1",
        "npm-watch": "^0.11.0",
        "sweetalert2": "^11.11.0",
        "tsparticles": "^3.4.0",
        "vue-confetti": "^2.3.0",
        "vue-confetti-explosion": "^1.0.2"
    }
}
